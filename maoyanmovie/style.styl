$hdbg_color = #e54847
$font_color_block = #fff
html,body
    width 100%
.flex
    display flex
.flex1
    flex 1
.nav
    height 1.067rem
    font-size 18px
    text-align center
    background-color $hdbg_color
    padding 6px
    box-sizing border-box
    .arrow-left
    float left
    height 100%
    position relative
        &:after
            content ''
            width 12px
            height 12px
            position absolute
            top 50%
            left 16px
            border 2px solid #fff
            border-width 0 0 2px 2px
            transform rotate(45deg) translateY(-50%)
    span 
        color $font_color_block
        display inline-block
.page
    background #f4f4f4
    position relative
    z-index 1
    margin 0
    color #555
    min-width 3.1rem
    // 取消高亮效果
    -webkit-tap-highlight-color rgba(255,255,255,0)
    font 14px/1.5 Arial,Helvetica,sans-serif
    section
        background #fff
        border-bottom 1px solid #e5e5e5
    .movie-header
        padding 0
        background #f8f8f8
        border-bottem none
        .movie
            color #ffffff
            padding 0.4rem
            line-height 1
            position relative
            box-sizing border-box
            
            filter blur(0) //变模糊，num越大，越模糊
            &-background,
            &-filter
                position absolute
                top 0
                right 0
                left 0
                bottom 0
            &-background
                z-index 0
                filter blur(0.6rem)
                -webkit-filter blur(0.6rem)
                background-image url(./images/header-bg.jpg)
                background-size cover//占满整个父容器
                background-repeat no-repeat
                background-position-y 40%
            &-filter
                background-color #40454d
                opacity 0.5
            &-container
                z-index 1
                position relative
                overflow hidden
                .movie-cover
                    float left
                    width 2.854rem
                    height 4rem
                    border 1px solid #f0f2f3
                    position relative
                    .img
                        width 100%
                        
                    &:after
                            content ''
                            display block
                            width 1.8rem
                            height 1.8rem
                            background-image url(./images/bofang.png)
                            background-size 100% auto
                            position absolute
                            left 50%
                            top 50%
                            transform translate(-50%,-50%)
                            opacity 0.7
            .movie-content
                overflow hidden
                padding-left 0.4rem
                .movie-name
                    font-size 17px
                    margin 0.08rem 0
                .movie-ename
                    font-size 12px
                    margin-bottom 0.3rem
                .movie-score
                    font-size 12px
                    margin-bottom 0.3rem
                    .rating
                        .img
                            width 0.48rem
                            margin-right 2px
                        .rating-score
                            font-size 0.48rem
                            color #ffc600
                .movie-detail
                    font-size 12px
                    margin-bottom 0.16rem
                    opacity 0.7
                    div,p
                        margin-bottom 0.14rem
            .operating
                margin-top 0.5rem
                div
                    border 1px solid rgba(255,255,255,0.4)
                    background-color rgba(255,255,255,0.4)
                    font-size 14px
                    color #ffffff
                    position relative
                    z-index 2
                    text-align center
                    padding 0.25rem 0
                    border-radius 4px
                    img 
                        // img图片的上下居中
                        vertical-align middle
                    span
                        vertical-align middle
                .movie-watch
                    margin-right 0.3rem
                    img
                        width 14px
                .movie-mark
                    img
                        width 18px   
#toast
    display none
.active
    display block !important



